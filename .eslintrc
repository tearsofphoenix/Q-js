{ "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-underscore-dangle": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "max-len": 0,
    "no-return-assign": 0,
    "arrow-body-style": 0,
    "quote-props": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "comma-dangle": 0,
    // not sure why airbnb turned this on. gross!
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-case-declarations": 0,
    "object-curly-spacing": 0,
    "no-console": 0,
    "no-alert": 0,
    "linebreak-style": 0,
    "semi": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0,
    "no-proto": 0,
    "no-bitwise": 0
  },
  "plugins": [
    "import"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__DEBUG__": true,
    "webpackIsomorphicTools": true
  }
}
